<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace 命名空间 可以自定义 但是不能与其他的namespace重复 -->
<mapper namespace="com.sinister.dao.JlReciuitDao">
	<!-- type属性-实体类 -->
	<resultMap type="com.sinister.entity.JlReciuit" id="JlReciuitResultMapper">
		<!-- 映射字段 数据库—实体类 -->
		<!-- column数据表字段 ，property 实体类的属性 -->
		<id column="c_rid" jdbcType="INTEGER" property="c_rid" />
		<result column="a_id" jdbcType="INTEGER" property="a_id" />
		<result column="c_duty" jdbcType="VARCHAR" property="c_duty" />
		<result column="c_requirement" jdbcType="VARCHAR" property="c_requirement" />
		<result column="c_money" jdbcType="VARCHAR" property="c_money" />
		<result column="c_workyear" jdbcType="VARCHAR" property="c_workyear" />
		<result column="c_number" jdbcType="VARCHAR" property="c_number" />
		<result column="c_edu" jdbcType="VARCHAR" property="c_edu" />
		<result column="c_address" jdbcType="VARCHAR" property="c_address" />
		<result column="c_mid" jdbcType="INTEGER" property="c_mid" />
	</resultMap>

	<insert id="JlSaveReciuit" parameterType="com.sinister.entity.JlReciuit">
		insert into c_recruit 
		(c_duty,c_requirement,c_money,c_workyear,c_number,c_edu,c_address,c_mid)
		values
		(#{c_duty},#{c_requirement},#{c_money},#{c_workyear},#{c_number},#{c_edu},
		#{c_address},#{c_mid})
	</insert>

	<select id="jlFindComId" parameterType="int" resultType="int">
	
		select c_mid from c_message where c_cid = #{c_id}
	</select>





</mapper>