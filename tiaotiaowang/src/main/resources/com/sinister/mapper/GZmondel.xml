<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace 命名空间 可以自定义 但是不能与其他的namespace重复 -->
<mapper namespace="com.sinister.dao.GZUserDao">
	<!-- type属性-实体类 -->
	<resultMap type="com.sinister.entity.GZmondel" id="GZUserResult">
		<!-- 映射字段 数据库—实体类 -->
		<!-- column数据表字段 ，property 实体类的属性 -->
		<result column="alljobs" jdbcType="AllJobs.java" property="AllJobs" />
		<result column="c_message" jdbcType="Cmessage.java" property="Cmessage" />
		<result column="c_recuit" jdbcType="Cmessage.java" property="Cmessage" />
	</resultMap>
	
   	<select id="findGZUser" parameterType="com.sinister.entity.GZUserEntity" resultMap="GZUserResult">
	 select c1.*,c2.c_name,c3.a_name from c_recruit c1
           left JOIN c_message c2 on c1.c_mid=c2.c_mid
           left JOIN alljobs c3 on c1.a_id=c3.a_id
           WHERE  c2.c_name=#{Cmessage.name} or c3.a_name=#{AllJobs.aName}
	</select>
	

</mapper>